{
  "extends": [
    "prettier",
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@next/next/recommended",
    "next",
    "plugin:react-hooks/recommended"
  ],
  "globals": {
    "React": "readonly"
  },
  "rules": {
    "max-len": [0, 100, 2],
    // allows you to prefix variables with an underscore _ if you have declared them but not used them in the code.
    // @example const _myVar = 1;
    "no-unused-vars": [
      1,
      {
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  }
}
